<!doctype html>
<html>

<head>
  <meta charset="UTF-8" />
  <title>Full Report</title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Oswald:wght@200..700&display=swap');

    html {
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    /* .page {
      page-break-after: always;
    } */

    body {
      /* page-break-after: always; */
      font-family: 'Open Sans', sans-serif;
    }
  </style>
</head>

<body>

  <body style="margin: 0;">
    <div style="width: 100%;background-color: #fff;">
      <section style="margin-bottom: 20px;">
        <!-- Inspection Summary -->
        <div style="padding: 10px 40px;">
          <div style="width: 100%; margin-top: 10px">
            <h4
              style="font-size: 30px; font-weight: 800;margin-bottom: 10px;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              Inspection Summary </h4>
          </div>
          <div style="display: flex; justify-content: space-between">
            <div style="width: 60%">
              <img style="margin-bottom: 15px; border-radius: 15px;width:400px;height: 300px;" src="<%= vessel?.image_url %>"
                alt="" />
            </div>
            <div style="width: 40%; padding-left: 30px">
              <div style="
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    width: 250px;
                    background-color: #000000;
                    border-radius: 10px;
                  ">
                <div style="  font-family: 'Open Sans', sans-serif;
                       display: flex;
                      margin-top: 15px;
                      padding: 15px;
                      justify-content: center;
                      align-items: center;
                      width: 80%;
                      height: 60%;
                      background-color: #<%= overallAverageColor %>;
                      color: <%= fontColor %>;
                      font-size: 50px;
                      font-weight: bold;
                      border-radius: 10px;
                    ">
                  <%= overallAverage %>
                </div>
                <div style="
                      display: flex;
                      justify-content: center;
                      padding-bottom: 5px;
                      align-items: center;
                      width: 100%;
                      color: #ffffff;
                      font-size: 20px;  font-family: 'Open Sans', sans-serif;
                    ">
                  <%= overallAverageValue %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- Vessel Information title -->
        <div style="
              background-color: #192333;
              width: fit-content;
              border-top-right-radius: 10px;
              border-bottom-right-radius: 10px;
              padding: 7px 40px;
              color: #ffffff;
              display: flex;
              align-items: center;
            ">
          <h4
            style="font-size: 20px;  margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
            Vessel Information </h4>
        </div>
        <!-- Vessel Information Conent -->
        <div style="
              display: flex;
              justify-content: space-between;
              padding: 20px 40px;
            ">
          <div style="width: 30%">
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Vessel:</strong>
              <%= vessel.vesselName %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>IMO:</strong>
              <%= vessel.imoNo %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Flag:</strong>
              <%= vessel.flag %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Class:</strong>
              <%= vessel.class %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>DWT:</strong>
              <%= vessel.dwt %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Year Built:</strong>
              <%= vessel.yearBuilt %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Teus:</strong>
              <%= vessel.teus %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Engine:</strong>
              <%= vessel.engine %>
            </p>
            <p class="date-info"
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Last Dry Dock:</strong>
              <%= vessel?.lastDueDateDryDock?.toLocaleDateString("en-US", { month: 'short' , year: 'numeric' }) %>
            </p>
            <p class="date-info"
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Next Dry Dock:</strong>
              <%= vessel?.nextDueDateDryDock?.toLocaleDateString("en-US", { month: 'short' , year: 'numeric' }) %>
            </p>
          </div>
          <div style="width: 30%">
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Under Costamare:</strong>
              <%= vessel?.ownershipStartDate?.toLocaleDateString("en-US", { month: 'short' , year: 'numeric' }) %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Managers:</strong>
              <%= vessel?.managers?.name %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Charterers:</strong>
              <%= vessel.charterer %>
            </p>
            <p
              style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              <strong>Charter Range:</strong>
              <%= vessel?.chartererRangeStartDate?.toLocaleDateString('en-US', { day: 'numeric' , month: 'short' ,
                year: 'numeric' }) %> - <%= vessel?.chartererRangeEndDate?.toLocaleDateString('en-US', { day: 'numeric'
                  , month: 'short' , year: 'numeric' }) %>
                  <p
                    style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                    <strong>Hire Rate:</strong>
                    <%= vessel.hireRate %>
                  </p>
                  <p
                    style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                    <strong>Off Hires:</strong>
                    <%= vessel.offHires %>
                  </p>
                  <p
                    style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                    <strong>PSC:</strong>
                    <%= additionalInfo?.psc %>
                  </p>
                  <p
                    style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                    <strong>Last Inspection Date:</strong>
                    <%= inspectionDate?.toLocaleDateString("en-US", { month: 'short' , year: 'numeric' }) %>
                  </p>
                  <p
                    style="font-size: 13px;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                    <strong>Last Inspection Location:</strong>
                    <%= startPort?.name %>
                  </p>
          </div>
          <div style="width: 30%; display: flex; flex-direction: column">
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                1 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #8c1719;
                    color: #f9e4e4;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;  font-family: 'Open Sans', sans-serif;
                  ">
                <span>Unacceptable</span>
              </div>
            </div>
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                2 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #f26c49;
                    color: #66130b;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;
                  ">
                <span>Poor</span>
              </div>
            </div>
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                3 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #f4af1a;
                    color: #7e5722;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;
                  ">
                <span>Average</span>
              </div>
            </div>
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                4 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #f5dd0b;
                    color: #80712c;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;
                  ">
                <span>Fair</span>
              </div>
            </div>
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                5 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #b6d993;
                    color: #407c3a;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;
                  ">
                <span>Satisfactory</span>
              </div>
            </div>
            <div style="display: flex; align-items: center">
              <h6
                style="margin-right: 15px; font-size: 20px; font-weight: 600;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
                6 </h6>
              <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    background-color: #3f9744;
                    color: #d9e9b3;
                    text-align: center;
                    padding: 10px;
                    margin-bottom: 5px;
                    font-size: 15px;
                    border-radius: 10px;
                    width: 100%;
                    font-weight: 700;
                  ">
                <span>Excellent</span>
              </div>
            </div>
          </div>
        </div>
        <!-- Vessel Information sub content -->
        <div style="
              display: flex;
              justify-content: space-around;
              padding: 20px 40px;
            ">
          <!-- 1 -->
          <% categorySummary.forEach(function(category) { %>
            <div style="
                display: flex;
                flex-direction: column;
                align-items: center;
                width: 100%;
                background-color: #000000;
                border-radius: 10px;
                margin-right: 10px;
              ">
              <div style="
                  display: flex;
                  margin-top: 15px;
                  justify-content: center;
                  align-items: center;
                  width: 80%;
                  min-height: 50px;
                  font-size: 20px;
                  font-weight: bold;
                  border-top-left-radius: 10px;
                  border-top-right-radius: 10px;
                  background-color: #<%= category.averageColor %>;
                  color: <%= category.fontColor %>;
                ">
                <%= category.average %>
              </div>
              <div style="
                  display: flex;
                  justify-content: center;
                  align-items: center;
                  color: #ffffff;
                  font-size: 12px;
                  font-weight: bold;
                  margin: 10px;
                  word-break: break-all;
                  text-align: center;
                ">
                <%= category.categoryName %>
              </div>
            </div>
            <% }); %>
        </div>
      </section>
      <!-- addition-info -->
      <% if (additionalInfo && additionalInfo?.pdf_file) { %>
        <section style="margin-bottom: 20px;margin-top: 20px;">
          <!-- Seafarers Onboard -->
          <div style="margin-bottom: 40px">
            <!-- <div style="padding: 0px 40px; margin: 40px 0">
            <h4 style="font-size: 30px; font-weight: 800;margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;  font-family: 'Open Sans', sans-serif;">
              Seafarers Onboard
            </h4>
          </div> -->
            <div style="padding: 0px 40px">
              <img src="<%= additionalInfo?.pdf_file  %>" style="width: 100%; margin: auto" />

            </div>
          </div>
        </section>


        <!-- categorySummary -->
        <% } %>
          <% categorySummary.forEach(category=> { %> <section
              style="page-break-after: always;">
              <!-- A. Hull -->
              <div style="margin-bottom: 20px">
                <div style=" display: flex;justify-content: space-between; align-items: center; padding: 20px 40px 20px;">
                  <!-- font-1 -->
                  <h1
                    style="color: #192333; font-size: 35px; font-weight: 900;margin-bottom: 0;margin-top: 0;font-family: 'Oswald', sans-serif;">
                    <%= category.categorySortCode %>. <%= category.categoryName %>
                  </h1>
                  <!-- card -->
                  <div style=" background-color: #192333;color: white;font-size: 30px;font-weight: 900;
                  width: 100px;padding: 10px 10px;text-align: center;float: right;border-radius: 10px;border-bottom: 6px solid #<%= category.averageColor %>;
                ">
                    <%= category.average %>
                  </div>
                </div>
                <!-- subcategories -->


                <% category.subcategories.forEach(subcategory=> { %>
                  <div style="display: flex; align-items: center; margin-bottom: 30px; ">
                    <div style=" background-color: #192333;width: fit-content;padding: 5px; padding-left: 50px;
                  padding-right: 20px; border-top-right-radius: 10px; border-bottom-right-radius: 10px;
                  color: #ffffff; display: flex; align-items: center;">

                      <!-- d1 -->
                      <h4
                        style="font-size: 20px; margin-bottom: 0;margin-top: 0;font-family: 'Open Sans', sans-serif;font-weight: 700;  ">
                        <%= subcategory.subcategorySortCode %>
                      </h4>
                    </div>
                    <!-- d2 -->
                    <h2 style="margin-bottom: 0;margin-top: 0;  font-family: 'Open Sans', sans-serif;font-size: 18px; color: #192333;font-weight: 700;margin-left: 20px;
                ">
                      <%= subcategory.subcategoryName %>
                    </h2>
                  </div>
                  <!-- A1.1 -->
                  <!-- left -->
                  <% subcategory?.questions.forEach((question,index)=> { %> <div
                      style="display: flex; padding-right: 40px; margin-bottom: 50px">
                      <div
                        style="background-color: #<%= gradeColor[question.grade] %>;width: 7%; border-top-right-radius: 10px;border-bottom-right-radius: 10px; ">
                      </div>

                      <!-- rigth -->
                      <div style="margin-left: 20px; width: 93%">
                        <h3
                          style="font-size: 20px; color: #192333; font-weight: 700;margin-top: 0;font-family: 'Open Sans', sans-serif;">
                          <%= subcategory.subcategorySortCode %>.<%= question.questionUniqueId %>. <%= question.question
                                %>
                        </h3>
                        <div style="margin: 0;  color: #192333;display: flex;align-items: center; ">
                          <div
                            style="width: 25px; height: 5px;background-color: #111729;border-radius: 2px; margin-right: 5px; ">
                          </div>
                          <p
                            style="margin-bottom: 0;font-size: 16px; margin-top: 0;font-family: 'Open Sans', sans-serif;  font-weight: 200;">
                            <%= question.comment %>
                          </p>
                        </div>
                        <div style="display: grid;grid-template-columns: repeat(3, 1fr);gap: 20px;margin-top: 20px;">
                          <% question.images.forEach((image,index)=> { %> <img src="<%= image.imageUrl %>"
                              alt="<%= image.imageName %>"
                              style="width: 100%; vertical-align: top; border-radius: 10px;width: 210px; height: 200px; object-fit: cover;" />
                            <% }); %>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                      <% }); %>
              </div>
            </section>
            <% }); %>
    </div>
    </div>
  </body>

</html>